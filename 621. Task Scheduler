class Solution {
public:
    int leastInterval(vector<char>& tasks, int n) {
        int len = tasks.size();
        vector<int> vec(26);
        for(char c:tasks)
        {
            vec[c-'A']++;
        }
        sort(vec.rbegin(), vec.rend());
        int cnt = 1;
        while(cnt < vec.size() && vec[cnt] == vec[0])
        {
            cnt++;
        }

        return max(len, (vec[0]-1)*(n+1)+cnt);
    }

};
